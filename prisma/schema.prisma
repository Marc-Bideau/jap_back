// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id     Int      @id @default(autoincrement())
  login  String   @unique
  mdp    String?
  pseudo String?
  admin  Boolean  @default(false)
  controle Controle[]
}

model Controle {
  id                Int      @id @default(autoincrement())
  exercicesReponses String
  note              Int
  date              DateTime @default(now())
  personne          User     @relation(fields: [personneId], references: [id])
  personneId        Int
}

model Theme {
  id         Int        @id @default(autoincrement())
  thematique String     @unique
  caracteres Caractere[]
}

model Caractere {
  id          Int      @id @default(autoincrement())
  francais    String
  japonaisKata String?
  japonaisHira String?
  kanji       String?
  theme       Theme    @relation(fields: [themeId], references: [id])
  themeId     Int
}

generator prisma {
  provider = "prisma-client-js"
  schema   = "public"
}

// Ajoutez cette ligne pour définir managementApiSecret
// Remplacez "YOUR_SECRET_KEY" par une chaîne de caractères secrète
// Gardez cette clé secrète en sécurité et ne la partagez pas
configurations {
  development {
    managementApiSecret = "YOUR_SECRET_KEY"
  }
}
